
default_platform(:ios)

before_all do
  ensure_git_status_clean
end

platform :ios do
    desc "Build project"
    lane :build do
        cocoapods(
            podfile: "./"
        )
        xcodebuild(
            scheme: ENV["SCHEME"],
            xcargs: "CODE_SIGNING_ALLOWED=NO CODE_SIGNING_REQUIRED=NO CODE_SIGN_ENTITLEMENTS= CODE_SIGN_IDENTITY= -quiet",
            workspace: ENV["WORKSPACE"]
        )
    end
end
